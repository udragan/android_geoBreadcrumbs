<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_preference_category_units_title">

        <ListPreference
            app:defaultValue="metric"
            app:entries="@array/measurement_unit_entries"
            app:entryValues="@array/measurement_unit_values"
            app:key="@string/settings_preference_measurement_unit_key"
            app:title="@string/settings_preference_measurement_unit_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="ms"
            app:entries="@array/speed_unit_entries"
            app:entryValues="@array/speed_unit_values"
            app:key="@string/settings_preference_speed_unit_key"
            app:title="@string/settings_preference_speed_unit_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="decimal"
            app:entries="@array/coordinates_display_entries"
            app:entryValues="@array/coordinates_display_values"
            app:key="@string/settings_preference_coordinates_display_key"
            app:title="@string/settings_preference_coordinates_display_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_preference_category_tracking_precision_title">
        <ListPreference
            app:defaultValue="2000"
            app:entries="@array/precision_interval_entries"
            app:entryValues="@array/precision_interval_values"
            app:key="@string/settings_preference_tracking_precision_interval_key"
            app:title="@string/settings_preference_tracking_precision_interval_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/precision_distance_entries"
            app:entryValues="@array/precision_distance_values"
            app:key="@string/settings_preference_tracking_precision_distance_key"
            app:title="@string/settings_preference_tracking_precision_distance_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

